<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tourist Booking Platform</title>
    <meta name="title" content="Tourist Booking Platform" />
    <meta name="description" content="Tourist Booking Platform is a full-stack .NET Core web application for managing and reserving tourist events, featuring a public event list, admin panel with authentication, SQL Server integration, and CI/CD deployment to Azure using GitHub Actions." />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://touristbooking-web.azurewebsites.net/" />
    <meta property="og:title" content="Tourist Booking Platform" />
    <meta property="og:description" content="Tourist Booking Platform is a full-stack .NET Core web application for managing and reserving tourist events, featuring a public event list, admin panel with authentication, SQL Server integration, and CI/CD deployment to Azure using GitHub Actions." />
    <meta property="og:image" content="https://i.ibb.co/gbXLnvmM/tourist-booking-platform.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://touristbooking-web.azurewebsites.net/" />
    <meta name="twitter:title" content="Tourist Booking Platform" />
    <meta name="twitter:description" content="Tourist Booking Platform is a full-stack .NET Core web application for managing and reserving tourist events, featuring a public event list, admin panel with authentication, SQL Server integration, and CI/CD deployment to Azure using GitHub Actions." />
    <meta name="twitter:image" content="https://i.ibb.co/gbXLnvmM/tourist-booking-platform.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TouristBookingPlatform.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tourist Booking Platform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- General nav items -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Project" asp-action="About">About Project</a>
                        </li>

                        <!-- Divider -->
                        <li class="nav-item d-none d-sm-block">
                            <span class="nav-link disabled px-0 mx-2 border-start" style="height: 100%;"></span>
                        </li>

                        <!-- Authenticated nav items -->
                        <li class="nav-item ms-3">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TouristBookingPlatform
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
