@model IEnumerable<TouristBookingPlatform.Web.Models.Event>

@{
    ViewData["Title"] = "Admin Panel - Events";
}

<h1>Manage Tourist Events</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Event</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Location</td>
                <td>@ev.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ev.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ev.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
