@model IEnumerable<TouristBookingPlatform.Web.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Upcoming Tourist Events</h1>

<a class="btn btn-success mb-3" asp-action="Create">+ Create New Event</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Location</td>
                <td>@ev.Date.ToString("yyyy-MM-dd")</td>
                <td>@ev.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
